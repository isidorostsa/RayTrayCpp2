#pragma once

#include "ray.h"

hittable: @interface type = {

    hit_record: @struct type = {
        contact_point: point3;
        reflective_normal: vec3;
        dist_to_point: double;
        hit_front_face: bool;
    }

    hit: (
        this,
        r: ray,
        ray_tmin: double,
        ray_tmax: double,
    ) -> std::optional<hit_record>;
}