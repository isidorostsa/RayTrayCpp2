
// Sort of a lazy value_or, that is meant to be used with UFCS 
value_else: <T> (
    opt: std::optional<T>,
    foo // would like to write : () -> T, but cppfront crashes
) -> T == {

    foo_optional:= 
        :() -> std::optional<T> = {
            // always full
            return std::make_optional<T>(foo()$);
        };
 
    return opt.or_else(foo_optional).value();
}